<Window x:Class="BikeMonitoringViewLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bike monitoring">
    <DockPanel>
        <ListView Name="lvTrainings" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" DockPanel.Dock="Bottom">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Jour" DisplayMemberBinding="{Binding DayString}"/>
                    <GridViewColumn Header="Dénivelé" DisplayMemberBinding="{Binding HeightDifference}"/>
                    <GridViewColumn Header="Temps (min)" DisplayMemberBinding="{Binding TrainingTimeMin}"/>
                    <GridViewColumn Header="Moyenne (km/h)" DisplayMemberBinding="{Binding Average}"/>
                    <GridViewColumn Header="Fréquence cardiaque moyenne" DisplayMemberBinding="{Binding CardiacFrequencyAverage}"/>
                    <GridViewColumn Header="Fréquence cardiaque max." DisplayMemberBinding="{Binding CardiacFrequencyMax}"/>
                    <GridViewColumn Header="Cadence" DisplayMemberBinding="{Binding Cadence}"/>
                    <GridViewColumn Header="Commentaire général de sortie" DisplayMemberBinding="{Binding GenComment}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
